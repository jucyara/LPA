#include<stdio.h>

main(){
	
	int numero, soma = 0;
	
	printf("Informe um numero positivo p/somar ou negativo p/sair: ");
	scanf("%d", &numero);
	
	while(numero >= 0){
		
		soma = soma + numero;
		
	printf("Informe um numero positivo p/somar ou negativo p/sair: ");
	scanf("%d", &numero);
	}
	printf("A soma de todos os inteiros positivos e: %d\n", soma);	
	
	
}
